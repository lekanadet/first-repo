<head>
    <link rel="stylesheet" href="/css/styles.css">
 <h1>MESSAGE</h1>
  <h2></h2>
   
     <form action="/new-message/{{id}}" method="GET">
     
            <fieldset>
                
                <br/>
                <input type="submit" value="New Message" />
                <br/>
               
            </fieldset>
            
        </form>
        
</head>

<div class="container">
 

   
    <table class="table">
    <tr>
            <th> <b>Inbox</b></a> </th>
            </tr>
       {{#each inbox}}
   
            <tr>
                <td>{{this.sender}}</td>      
